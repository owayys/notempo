{
  "extends": "@repo/typescript-config/react.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "erasableSyntaxOnly": false,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@contract/*": [
        "../../packages/contract/src/*"
      ],
      "@domain/*": [
        "../../packages/domain/src/*"
      ],
      "@application/*": [
        "../../packages/application/src/*"
      ]
    },
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
